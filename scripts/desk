#!/bin/zsh

session="ğŸ’»Desk"

if tmux has-session -t $session 2>/dev/null; then
    echo "Session '$session' existsï¼Œdo you want to?\n[a(ttach)/n(ew)/c(ancel)]..."
    read choice
    if [ "$choice" = "a" ]; then
        tmux attach-session -t $session
    elif [ "$choice" = "n" ]; then
        tmux new-session -s "ğŸ’»Desk_new" -n "ğŸ Home" "$HOME/uTUI/desktop.sh"

    else
        exit 0;
    fi 
else
  echo "Session '$session' doesn't existï¼Œsetting..."
  tmux new-session -s "$session" -n "ğŸ Home" "$HOME/uTUI/desktop.sh"
fi
