#!/bin/zsh

while true; do
  clear
  # Menu
  choices=(
    "ğŸ“‚|FileManager::$HOME/uTUI/apps/file_manager.sh"
    " \e[38;5;82mîª…\e[0m|Terminal::$HOME/uTUI/apps/terminal.sh"
    " \e[38;5;82mîœ\e[0m|AndroidApps::$HOME/uTUI/androidApps.sh"
    "ğŸ“|TextEditor::$HOME/uTUI/apps/text_editor.sh"
    "ğŸŒ|WebBrowser::$HOME/uTUI/apps/web_browser.sh"
    "ğŸ“Š|SysMonitor::$HOME/uTUI/apps/system_monitor.sh"
    "ğŸ¹|Demucs::$HOME/uTUI/apps/demucs.sh"
    "ğŸµ|MusicPlayer::$HOME/uTUI/apps/Audio_Player.sh"
    "ğŸ˜€|EmojiPrinter::$HOME/uTUI/apps/emoji_fzf.sh"
    " \e[38;5;160mî©®\e[0m|Exit::exit"
  )

  selected=$(printf '%b\n' "${choices[@]}" | fzf --reverse --prompt="Desktop (Prefix+F for fzf)" --ansi)

  if [ -z "$selected" ]; then
    echo "No chosen.Return to Menu..."
    continue
  fi

  # chosen command
  cmd=$(echo "$selected" | awk -F "::" '{print $2}')

  if [ "$cmd" = "exit" ]; then
    echo "Exit From Desk"
    tmux kill-session
    break
  elif [ -x "$cmd" ]; then
    clear
    app_name=$(echo "$selected" | awk -F "::" '{print $1}')
    tmux new-window -n $app_name "$cmd"
  else
    echo "Unknown command or command can't runï¼š$cmd"
  fi
done

